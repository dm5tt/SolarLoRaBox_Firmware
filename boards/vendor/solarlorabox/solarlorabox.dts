/dts-v1/;
#include <st/u0/stm32u083Xc.dtsi>
#include <st/u0/stm32u083mctx-pinctrl.dtsi>
#include "arduino_r3_connector.dtsi"
#include <zephyr/dt-bindings/input/input-event-codes.h>

/ {
	model = "STMicroelectronics STM32U83C-DK board";
	compatible = "st,stm32u083c-dk";

	#address-cells = <1>;
	#size-cells = <1>;

	chosen {
		zephyr,console = &usart1;
		zephyr,shell-uart = &usart1;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
	};

	leds: leds {
		compatible = "gpio-leds";
		green_led_1: led_3 {
			gpios = <&gpioa 10 GPIO_ACTIVE_HIGH>;
			label = "User LED";
		};
	};

	aliases {
		led0 = &green_led_1;
	};
};

&usart1 {
	pinctrl-0 = <&usart4_tx_pa0 &usart4_rx_pa1>;
	pinctrl-names = "default";
	current-speed = <115200>;
	status = "okay";
};

&clk_hsi {
	status = "okay";
};

&pll {
	div-m = <1>;
	mul-n = <6>;
	div-p = <2>;
	div-q = <2>;
	div-r = <2>;
	clocks = <&clk_hsi>;
	status = "okay";
};

&rcc {
	clocks = <&pll>;
	clock-frequency = <DT_FREQ_M(48)>;
	ahb-prescaler = <1>;
	apb1-prescaler = <1>;
};

&adc1 {
	pinctrl-0 = <&adc1_in6_pa2 &adc1_in7_pa3>;
	pinctrl-names = "default";
	st,adc-clock-source = "ASYNC";
	clocks = <&rcc STM32_CLOCK_BUS_APB1_2 0x00100000>,
		 <&rcc STM32_SRC_HSI ADC_SEL(2)>;
	st,adc-prescaler = <4>;
	status = "okay";
	vref-mv = <3300>;
};

&i2c1 {
	pinctrl-0 = <&i2c1_scl_pb8 &i2c1_sda_pb9>;
	pinctrl-names = "default";
	status = "okay";
	clock-frequency = <I2C_BITRATE_FAST>;
};


&timers1 {
	st,prescaler = <10000>;
	status = "okay";

	pwm1: pwm {
		status = "okay";
		pinctrl-0 = <&tim1_ch1_pa8>;
		pinctrl-names = "default";
	};
};

&timers2 {
	st,prescaler = <10000>;
	status = "okay";

	pwm2: pwm {
		pinctrl-0 = <&tim2_ch1_pa5>;
		pinctrl-names = "default";
		status = "okay";
	};
};
